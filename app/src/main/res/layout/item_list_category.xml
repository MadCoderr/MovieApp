<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/all_margin_8_dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_category"
            android:layout_width="@dimen/img_width_item"
            android:layout_height="@dimen/img_height_item"
            tools:src="@color/colorBlue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_title_category"
                style="@style/Heading"
                android:layout_marginTop="@dimen/all_margin_8_dp"
                android:layout_marginLeft="@dimen/all_margin_8_dp"
                android:layout_marginStart="@dimen/all_margin_8_dp"
                tools:text="Title"/>

            <TextView
                android:id="@+id/lbl_sub_hd_cast_category"
                style="@style/SubHeading_Detail"
                android:text="@string/cast"
                android:layout_marginLeft="@dimen/all_margin_16_dp"
                android:layout_marginStart="@dimen/all_margin_16_dp"
                />

            <TextView
                android:id="@+id/lbl_cast_category"
                style="@style/SubHeading_Detail"
                android:layout_marginLeft="@dimen/all_margin_16_dp"
                android:layout_marginStart="@dimen/all_margin_16_dp"
                tools:text="Jim Carry, Alisa, Jordan Yo"
                android:maxLines="1"/>

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/all_margin_16_dp"
                android:layout_marginStart="@dimen/all_margin_16_dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_icon_rate_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star" />

                <TextView
                    android:id="@+id/lbl_rate_category"
                    style="@style/SubHeading_Detail"
                    android:text="7/10"
                    android:padding="@dimen/all_pad_5_dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>