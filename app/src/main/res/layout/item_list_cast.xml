<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/img_width_item"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:padding="@dimen/all_pad_3_dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_cast"
        android:layout_width="@dimen/img_width_item"
        android:layout_height="@dimen/img_height_item"
        tools:src="@color/colorAccent"
        />

    <RelativeLayout
        android:layout_width="@dimen/img_width_item"
        android:layout_height="match_parent"
        android:background="@color/tabColor">

        <TextView
            android:id="@+id/lbl_cast_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/all_margin_8_dp"
            android:layout_marginLeft="@dimen/all_margin_8_dp"
            android:layout_marginStart="@dimen/all_margin_8_dp"
            tools:text="Brad Pitt"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/lbl_cast_name_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jhon Cena"
            android:layout_marginLeft="@dimen/all_margin_8_dp"
            android:layout_marginStart="@dimen/all_margin_8_dp"
            android:layout_below="@id/lbl_cast_name"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"/>



    </RelativeLayout>

</LinearLayout>